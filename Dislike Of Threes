#include<bits/stdc++.h>
using namespace std;

int main(){
	int n=1001;
	vector<int> v;
	int j=1;
	while(v.size()!=1000){
		int check1=j%3,check2=j%10;
		if(check1!=0 && check2!=3){
			v.push_back(j);
		}
		j++;
	}
	int t;
	cin>>t;
	while(t--){
		int k;
		cin>>k;
		cout<<v[k-1]<<"\n";
	}
	return 0;
}
